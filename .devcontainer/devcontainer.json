{
  "name": "containers",
  "dockerComposeFile": [
    "docker-compose.yaml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/containers",
  "postCreateCommand": "cd $WORKSPACE/",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "files.exclude": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/bin": true,
            "**/obj": true,
            "**/.vs": true
        }
        }
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}